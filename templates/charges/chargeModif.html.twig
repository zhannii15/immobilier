{% extends 'base.html.twig' %}

{% block title %}
    {% if mode %}
        Modification
    {% else %}
        Création
    {% endif %}
{% endblock %}

{% block body %}
    <h1>
        {% if mode %}
            Modification des charges
        {% else %}
            Création de charges
        {% endif %}
    </h1>

    {{ form_start(formCharge) }}
        {{ form_row(formCharge.loyer_mensuel, {label: 'Loyer mensuel' }) }} 
        {{ form_row(formCharge.garantie_loyer, {label: 'Garantie loyer' }) }}   
        {{ form_row(formCharge.provision_charge, {label: 'Provision charge' }) }}   
        {{ form_row(formCharge.etat_des_lieux, {label: 'Etat des lieux' }) }} 
        {{ form_row(formCharge.appartement, {label: 'Appartement' }) }} 

        {% if mode %}
            <button type="submit" class="btn btn-outline-primary m-2">Modifier</button>
        {% else %}
            <button type="submit" class="btn btn-outline-primary m-2">Créer</button>
        {% endif %}
    {{ form_end(formCharge) }}

{% endblock %}
