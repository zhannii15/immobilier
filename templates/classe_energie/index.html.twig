{% extends 'base.html.twig' %}

{% block title %}Classe energetique{% endblock %}

{% block body %}
    {% if allEnergie is not empty  %}
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Valeur</th>
                <th scope="col" class="text-center" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for energie in allEnergie %}
            
                <tr class="table-active">
                    <th scope="row">{{energie.id}}</th>
                    <td>{{energie.nom}}</td>
                    <td>{{energie.Valeur}}</td>
                    <td>
                        <a class="btn btn-outline-warning"href="{{path('energie_modifier',{id:energie.id})}}">Modifier</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger"href="#">Supprimer</a> 
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn btn-outline-primary"href="{{path('home')}}">Retour accueil</a> <a class="btn btn-outline-info"href="{{path('energie_create')}}">Nouvelle classe energ√©tique</a>

{% endblock %}
