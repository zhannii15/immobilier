{% extends 'base.html.twig' %}

{% block title %}
    {% if mode %}
        Modification
    {% else %}
        Création
    {% endif %}
{% endblock %}

{% block body %}
    <h1>
        {% if mode %}
            Modification de la surface des piéces 
        {% else %}
            Création de surface des pieces 
        {% endif %}
    </h1>

    {{ form_start(formSurface) }}
        {{ form_row(formSurface.nom, {label: 'Nom' }) }} 
        {{ form_row(formSurface.m2_par_piece, {label: 'M2 par piéce ' }) }}   
        {{ form_row(formSurface.appartement, {label: 'Appartement ' }) }}   
       

        {% if mode %}
            <button type="submit" class="btn btn-outline-primary m-2">Modifier</button>
        {% else %}
            <button type="submit" class="btn btn-outline-primary m-2">Créer</button>
        {% endif %}
    {{ form_end(formSurface) }}

{% endblock %}