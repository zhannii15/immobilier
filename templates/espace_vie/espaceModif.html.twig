{% extends 'base.html.twig' %}

{% block title %}
    {% if mode %}
        Modification
    {% else %}
        Création
    {% endif %}
{% endblock %}

{% block body %}
    <h1>
        {% if mode %}
            Modification espace vie
        {% else %}
            Création espace vie
        {% endif %}
    </h1>

    {{ form_start(formEspace) }}
        {{ form_row(formEspace.parking, {label: 'Parking' }) }} 
        {{ form_row(formEspace.sde, {label: "Salle d'eau " }) }}   
        {{ form_row(formEspace.sdb, {label: 'Salle de bain' }) }}   
        {{ form_row(formEspace.ascenseur, {label: 'Ascenseur' }) }} 
        {{ form_row(formEspace.coloc, {label: 'Colocation' }) }} 

        {% if mode %}
            <button type="submit" class="btn btn-outline-primary m-2">Modifier</button>
        {% else %}
            <button type="submit" class="btn btn-outline-primary m-2">Créer</button>
        {% endif %}
    {{ form_end(formEspace) }}

{% endblock %}
